  "license": "CC-BY-SA-4.0",
  "packageManager": "npm",
  "workspaces": [
    "./packages/*",
    "./packages/@*/*"
  ],
  "m30pm": {
    "versionControlTool": "git",
    "buildTool": "gradle",
    "loggingLevel": "error"
  },
  "dependencies": {
    "@rse/nunjucks-cli": "^1.5.3",
    "uuid": "^10.0.0"
